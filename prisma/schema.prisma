generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum CONDITION {
  NEW
  USED
}

model Category {
  id            String          @id @default(uuid()) @map("_id")
  title         String
  imageUrl      String
  subCategories subCategories[]
  spareParts    SparePart[]
  mobilePhones  MobilePhones[]
  fashions      Fashion[]
  constructions Construction[]
  furnitures    Furniture[]
  vehicles      Vehicles[]
  toys          Toys[]
  agricultures  Agriculture[]
  services      Services[]
  electronics   Electronics[]
  ligts         Lights[]
  realEstates   RealEstate[]
}

model subCategories {
  id            String         @id @default(uuid()) @map("_id")
  title         String
  imageUrl      String
  category      Category       @relation(fields: [categoryId], references: [id])
  categoryId    String
  spareParts    SparePart[]
  mobilePhones  MobilePhones[]
  fashions      Fashion[]
  constructions Construction[]
  furnitures    Furniture[]
  vehicles      Vehicles[]
  toys          Toys[]
  agricultures  Agriculture[]
  services      Services[]
  electronics   Electronics[]
  ligts         Lights[]
  realEstates   RealEstate[]
}

model User {
  id      String @id @default(uuid()) @map("_id")
  name    String
  email   String @unique
  phone   String
  address String
}

